<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinket.bflf.CariDarah">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="2dp">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextnama"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nama Pelapor"
        android:textStyle="bold|italic"
        android:textAlignment="inherit"
        android:background="#4c53dc"
        android:hyphenationFrequency="normal"
        android:textColorHint="#ffffff"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextnohp"
        android:hint="No Handphone"
        android:layout_below="@+id/editTextnama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="inherit"
        android:textStyle="bold|italic"
        android:background="#4c53dc"
        android:layout_marginTop="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextalamat"
        android:hint="Alamat"
        android:layout_below="@+id/editTextnohp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppTheme.PopupOverlay"
        android:textAlignment="inherit"
        android:textStyle="bold|italic"
        android:background="#4c53dc"
        android:layout_marginTop="5dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />


        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/editTextgoldarah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextalamat"
            android:textAlignment="inherit"
            android:layout_marginTop="5dp"
            android:background="#4c53dc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/daerah"
            android:entries="@array/daerah"
            android:textAlignment="inherit"
            android:layout_below="@+id/tingkat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="#4c53dc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/tingkat"
            android:entries="@array/kepentigan"
            android:textAlignment="inherit"
            android:layout_below="@+id/editTextgoldarah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="#4c53dc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/editTextpasien"
            android:hint="Nama Pasien"
            android:textStyle="bold|italic"
            android:textAlignment="inherit"
            android:background="#4c53dc"
            android:alpha="1"
            android:hyphenationFrequency="normal"
            android:textColorHint="#ffffff"
            android:textIsSelectable="false"
            android:textColor="#ffffff"
            android:layout_below="@+id/daerah"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextnik"
        android:hint="NIK Pelapor"
        android:textStyle="bold|italic"
        android:textAlignment="inherit"
        android:background="#4c53dc"
        android:alpha="1"
        android:hyphenationFrequency="normal"
        android:textColorHint="#ffffff"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:layout_below="@+id/editTextpasien"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:inputType="number" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/jumlahdarah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/jumlahdarah"
            android:textAlignment="inherit"
            android:layout_marginTop="5dp"
            android:background="#4c53dc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Kirim"
            android:id="@+id/button2"
            android:onClick="kirim"
            android:src="@drawable/kirim"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />



    </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewResult"

        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:text="LAPOR KEBUTUHAN DARAH"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
