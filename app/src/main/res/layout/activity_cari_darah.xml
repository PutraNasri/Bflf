<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinket.bflf.CariDarah">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextnama"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nama Pelapor"
        android:textStyle="bold|italic"
        android:textAlignment="center" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextnohp"
        android:hint="No Handphone"
        android:layout_below="@+id/editTextnama"
        android:layout_alignRight="@+id/editTextnama"
        android:layout_alignEnd="@+id/editTextnama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextalamat"
        android:hint="Alamat"
        android:layout_below="@+id/editTextnohp"
        android:layout_alignRight="@+id/editTextnohp"
        android:layout_alignEnd="@+id/editTextnohp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppTheme.PopupOverlay"
        android:textAlignment="center"
        android:textStyle="bold|italic" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewResult"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextgoldarah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextalamat"
        android:textAlignment="center" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/daerah"
            android:entries="@array/daerah"
            android:textAlignment="center"
            android:layout_below="@+id/tingkat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/tingkat"
            android:entries="@array/kepentigan"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_below="@+id/editTextgoldarah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Kirim"
            android:id="@+id/button2"
            android:onClick="kirim"
            android:src="@drawable/kirim"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />


</RelativeLayout>
