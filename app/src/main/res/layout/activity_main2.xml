<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#bcbed1"
    tools:context="com.example.kinket.bflf.Main2Activity">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#f90202"
        android:id="@+id/frameLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BFLF"
            android:id="@+id/textView42"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#f90202"
        android:id="@+id/frameLayout13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BFLF"
            android:id="@+id/textView45"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/frameLayout13"
        android:layout_alignParentStart="true">


        <ScrollView
            android:layout_width="wrap_content"
            android:id="@+id/scrollView3"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/frameLayout"
            android:layout_gravity="center_horizontal"
            android:layout_height="850dp">

            <GridLayout
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/frameLayout"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="350dp"
                android:scrollbarSize="1dp">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/button5"
                    android:layout_alignParentTop="true"

                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="5dp"
                    android:onClick="butuh"
                    android:scaleType="fitXY"
                    android:src="@drawable/butuhdarah"
                    android:background="@drawable/bcc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONOR DARAH"
                    android:id="@+id/textView33"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/button7"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@drawable/bcc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="lokasi"
                    android:src="@drawable/pmiterdekat"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/button6"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginRight="5dp"
                    android:onClick="donor"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/testt"
                    android:background="@drawable/bcc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUTUH DARAH"
                    android:id="@+id/textView"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/button8"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:background="@drawable/bcc"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="saran"
                    android:src="@drawable/saran"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS &amp; PMI"
                    android:id="@+id/textView35"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SARAN"
                    android:id="@+id/textView34"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/imageButton2"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bcc"
                    android:scaleType="fitXY"
                    android:src="@drawable/beritaa"
                    android:onClick="berita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BERITA"
                    android:id="@+id/textView38"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRUB"
                    android:id="@+id/textView36"
                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/button9"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:onClick="grub"
                    android:src="@drawable/group"
                    android:background="@drawable/bcc" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:id="@+id/imageButton"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bcc"
                    android:scaleType="fitXY"
                    android:src="@drawable/beritaa"
                    android:onClick="berita" />

            </GridLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
