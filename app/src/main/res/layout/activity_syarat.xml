<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinket.bflf.Syarat"
    android:onClick="lanjut">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.5"
        android:textColor="#000000"
        android:textStyle="bold"
        android:hint="Lanjut"
        android:textColorHint="#000000"
        android:onClick="lanjut" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button4"
        android:layout_alignParentTop="true" >
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="2dp">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:text="Syarat-syarat teknis menjadi donor darah:"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="* Umur 17-60 tahun"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="* Berat badan minimal 45 kg"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="* Temperatur tubuh 36,6–37,5 derajat Celcius"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:text="* Tekanan darah baik,110–160 mmHg,70 – 100 mmHg"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:text="* Denyut nadi teratur sekitar 50–100 kali/menit"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:text="* Hemoglobin baik pria maupun perempuan minimal 12,5 gram"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:text="* Jumlah penyumbangan per tahun paling banyak lima kali"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:text="* Penyumbangan sekurang-kurangnya tiga bulan"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text="Seseorang tidak boleh menjadi donor darah pada keadaan:"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:text="* Pernah menderita hepatitis B"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:text="* Dalam jangka waktu enam bulan sesudah kontak erat dengan penderita hepatitis"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:text="* Dalam jangka waktu enam bulan sesudah transfusi"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:text="* Dalam jangka waktu enam bulan sesudah tato/tindik telinga"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:text="* Dalam jangka waktu 72 jam sesudah operasi gigi"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:text="* Dalam jangka waktu enam bulan sesudah operasi kecil"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:text="* Dalam jangka waktu 12 bulan sesudah operasi besar"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:text="* Dalam jangka waktu 24 jam sesudah vaksinasi polio,influenza,kolera,tetanus dipteria,profilaksis"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:text="* Dalam jangka waktu dua minggu sesudah vaksinasi virus hidup parotitis epidemica,measles,dan tetanus toxin"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:text="* Dalam jangka waktu satu tahun sesudah injeksi terakhir imunisasi rabies therapeutic"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:text="* Dalam jangka waktu satu minggu sesudah gejala alergi menghilang"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:text="* Dalam jangka waktu satu tahun sesudah transplantasi kulit"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:text="* Sedang hamil dan dalam jangka waktu enam bulan sesudah persalinan"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:text="* Sedang menyusui"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:text="* Ketergantungan obat"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:text="* Alkoholisme akut dan kronis"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:text="* Mengidap Sifilis"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:text="* Menderita tuberkulosis secara klinis"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:text="* Menderita epilepsi dan sering kejang"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:text="* Menderita penyakit kulit pada vena (pembuluh darah balik) yang akan ditusuk"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:text="* Mempunyai kecenderungan perdarahan atau penyakit darah, misalnya kekurangan G6PD, thalasemia, dan polibetemiavera"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                android:text="* Pengidap HIV/ AIDS menurut hasil pemeriksaan saat donor darah."
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
