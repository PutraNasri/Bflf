<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kinket.bflf.DonorDarah"
    android:background="#f5bbbdd1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data Relawan "
            android:id="@+id/textView41"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextnama"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="  Nama Lengkap *"
        android:textAlignment="inherit"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffffff"
        android:background="#ffffff"
        android:typeface="sans" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextalamat"
        android:layout_below="@+id/editTextnama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="  Alamat Tetap *"
        android:textAlignment="inherit"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffffff"
        android:typeface="sans" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextumur"
        android:hint="  Umur *"
        android:layout_below="@+id/editTextgoldarah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="inherit"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:inputType="number"
        android:backgroundTint="#ffffff"
        android:typeface="sans" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextnohp"
        android:hint="  No Handphone *"
        android:layout_below="@+id/editTextalamat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="inherit"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="number"
        android:backgroundTint="#ffffff"
        android:typeface="sans" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/editTextberatbadan"
        android:layout_below="@+id/editTextnohp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="  Berat Badan *"
        android:textAlignment="inherit"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:backgroundTint="#ffffff"
        android:typeface="sans" />


        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/editTextgoldarah"
            android:layout_below="@+id/editTextberatbadan"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="inherit"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#ffffff" />

        <Spinner
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner2"
        android:entries="@array/daerah"
        android:layout_below="@+id/editTextumur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="inherit"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:backgroundTint="#ffffff" />

        <Spinner
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner3"
        android:entries="@array/kelamin"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="inherit"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:backgroundTint="#ffffff" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/editTextnik"
            android:hint="  NIK *"
            android:textAlignment="inherit"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:backgroundTint="#ffffff"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*) Wajib di isi"
            android:id="@+id/textView40"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="daftar"
            android:scaleType="fitXY"
            android:src="@drawable/daftar"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewResult"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:text="DAFTAR RELAWAN PENDONOR"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000" />


</RelativeLayout>
